<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CDMA.Views"
       x:Class="CDMA.MainPage"
       BackgroundColor="#f4f4f4">

    <Shell.FlyoutHeader>
        <StackLayout BackgroundColor="#333" Padding="10">
            <Label Text="Career Dendrogram" FontSize="24" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
    </Shell.FlyoutHeader>

    <Shell.ToolbarItems>
        <ToolbarItem Text="Login" Command="{Binding OnLoginCommand}"/>
        <ToolbarItem Text="Register" Clicked="OnRegisterClicked"/>
        <ToolbarItem Text="Profile" Clicked="OnProfileClicked"/>
        <ToolbarItem Text="Logout" Command="{Binding OnLogoutCommand}"/>
    </Shell.ToolbarItems>

    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" />
</Shell>
